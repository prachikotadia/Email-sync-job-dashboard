{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Notification Event",
    "type": "object",
    "properties": {
        "event_type": {
            "type": "string",
            "enum": [
                "email_received",
                "application_updated"
            ]
        },
        "recipient": {
            "type": "string",
            "format": "email"
        },
        "payload": {
            "type": "object"
        }
    },
    "required": [
        "event_type",
        "recipient",
        "payload"
    ]
}